@page "/register-staff"
@rendermode InteractiveServer
@using StoreManagementBlazorApp.Services
@using StoreManagementBlazorApp.Entities
@inject ApiService Api
@inject NavigationManager Nav
@inject StoreService Store
@inject IJSRuntime JS

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light p-3">
    <div class="card shadow-sm" style="width: 100%; max-width: 420px;">
        <div class="card-body text-center">
            <div class="mb-4">
                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center mx-auto"
                     style="width: 70px; height: 70px;">
                    <i class="bi bi-shop h1"></i>
                </div>
            </div>

            <h3 class="fw-bold">Welcome to Store</h3>
            <p class="text-muted">Register</p>
                    <div class="text-start mt-2">
                        <label class="form-label">Full Name</label>
                        <input class="form-control" @bind="regFullName" placeholder="Full Name" />
                    </div>
                    <div class="text-start mt-2">
                        <label class="form-label">Username</label>
                        <input class="form-control" @bind="regUsername" placeholder="Username" />
                    </div>
                    <div class="text-start mt-2">
                        <label class="form-label">Password</label>
                        <input class="form-control" type="password" @bind="regPassword" placeholder="Password" />
                    </div>
                    <div class="text-start mt-2">
                        <label class="form-label">Confirm Password</label>
                        <input class="form-control" type="password" @bind="regConfirmPassword" placeholder="Confirm Password" />
                    </div>
                    <p></p>
                    @if (!string.IsNullOrEmpty(regError))
                    {
                        <div class="alert alert-danger py-2">@regError</div>
                    }
                    <button class="btn btn-success w-100 mt-3" @onclick="HandleRegister">Register</button>
            </div>
        </div>
    </div>

@code {
    // --- register state ---
    string regFullName = "";
    string regUsername = "";
    string regPassword = "";
    string regConfirmPassword = "";
    string regError = "";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Store.LoadAuthFromStorageAsync();
        }
    }

    private async Task HandleRegister()
    {
        regError = "";

        if (string.IsNullOrWhiteSpace(regUsername) ||
            string.IsNullOrWhiteSpace(regPassword) ||
            string.IsNullOrWhiteSpace(regFullName))
        {
            regError = "Vui lòng nhập đủ thông tin.";
            return;
        }

        if (regPassword != regConfirmPassword)
        {
            regError = "Mật khẩu xác nhận không trùng khớp.";
            return;
        }

        try
        {
            bool success = await Api.RegisterUserAsync(
                regFullName,
                regUsername,
                regPassword
            );

            if (!success)
            {
                regError = "Đăng ký thất bại (có thể username đã tồn tại)";
                return;
            }

            regError = "Đăng ký thành công!";
        }
        catch (Exception ex)
        {
            regError = $"Lỗi không xác định: {ex.Message}";
        }
    }
}

