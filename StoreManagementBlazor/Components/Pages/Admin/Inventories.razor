@page "/inventories"
@using StoreManagementBlazorApp.Entities
@using StoreManagementBlazorApp.Services
@inject ApiService Api
@inject IJSRuntime JS
@rendermode InteractiveServer

<h1 class="text-3xl font-bold mb-2">Inventory Management</h1>

<div class="d-flex justify-content-between align-items-center my-4">
    <input class="form-control me-2" style="flex:1"
           placeholder="Search inventories..."
           @bind="searchQuery"
           @bind:event="oninput" />
    <button class="btn btn-primary" @onclick="OpenAdd">Add Inventory</button>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th class="text-center" style="width: 200px;">Activity</th>
        </tr>
    </thead>
    <tbody>
        @if (FilteredInventories.Any())
        {
            @foreach (var i in FilteredInventories)
            {
                <tr>
                    <td>@i.inventory_id</td>
                    <td>@i.product_name</td>
                    <td>@i.quantity</td>
                    <td>@i.price</td>
                    <td class="text-center">
                        <button class="btn btn-sm btn-outline-secondary"
                                @onclick="() => OpenEdit(i)">
                            Edit
                        </button>
                        <button class="btn btn-sm btn-outline-danger ms-2"
                                @onclick="() => ConfirmDelete(i.inventory_id)">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">
                    @if (isLoading)
                    {
                        <span>Loading...</span>
                    }
                    else
                    {
                        <span>No data available</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (showDialog)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal show d-block" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@dialogTitle</h5>
                    <button type="button" class="btn-close" @onclick="CloseDialog"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Product Name</label>
                        <input class="form-control"
                               placeholder="Enter product name"
                               @bind="form.product_name" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Quantity</label>
                        <input type="number" class="form-control"
                               @bind="form.quantity" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Price</label>
                        <input type="number" step="0.01" class="form-control"
                               @bind="form.price" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseDialog">Cancel</button>
                    <button class="btn btn-primary" @onclick="SaveInventory">Save</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Inventory> inventories = new();
    private Inventory form = new();
    private bool showDialog = false;
    private bool isEdit = false;
    private string dialogTitle = "";
    private string searchQuery = "";
    private bool isLoading = true;

    // SEARCH
    private IEnumerable<Inventory> FilteredInventories =>
        string.IsNullOrWhiteSpace(searchQuery)
            ? inventories
            : inventories.Where(i =>
                i.product_name != null &&
                i.product_name.Contains(searchQuery, StringComparison.OrdinalIgnoreCase));

    protected override async Task OnInitializedAsync()
    {
        await LoadInventories();
    }

    private async Task LoadInventories()
    {
        isLoading = true;
        try
        {
            inventories = await Api.GetInventoriesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading inventories: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void OpenAdd()
    {
        form = new Inventory();
        dialogTitle = "Add Inventory";
        isEdit = false;
        showDialog = true;
    }

    private void OpenEdit(Inventory i)
    {
        form = new Inventory
        {
            inventory_id = i.inventory_id,
            product_name = i.product_name,
            quantity = i.quantity,
            price = i.price
        };
        dialogTitle = "Edit Inventory";
        isEdit = true;
        showDialog = true;
    }

    private async Task SaveInventory()
    {
        if (string.IsNullOrWhiteSpace(form.product_name)) return;

        bool success;
        if (isEdit)
        {
            success = await Api.UpdateInventoryAsync(form);
        }
        else
        {
            success = await Api.AddInventoryAsync(form);
        }

        if (success)
        {
            await LoadInventories();
            CloseDialog();
        }
        else
        {
            await JS.InvokeVoidAsync("alert", "An error occurred while saving inventory.");
        }
    }

    private async Task ConfirmDelete(int id)
    {
        bool confirmed = await JS.InvokeAsync<bool>(
            "confirm",
            "Are you sure you want to delete this inventory?"
        );

        if (confirmed)
        {
            var success = await Api.DeleteInventoryAsync(id);
            if (success)
            {
                await LoadInventories();
            }
            else
            {
                await JS.InvokeVoidAsync("alert", "Cannot delete inventory.");
            }
        }
    }

    private void CloseDialog() => showDialog = false;
}
