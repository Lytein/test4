@page "/cart"
@using StoreManagementBlazorApp.Components.Pages.Admin
@using StoreManagementBlazorApp.Services
@using System.Globalization
@inject StoreService Store
@inject NavigationManager Navigation
@rendermode InteractiveServer

<h1 class="mb-4">Shopping Cart</h1>

@if (!Store.Cart.Any())
{
    <div class="text-center py-5">
        <h2 class="mb-3">Your Cart is Empty</h2>
        <p class="text-muted mb-4">Add some products to get started</p>
        <Component />
    </div>
}
else
{
    <div class="row g-4">
        <!-- Cart Items -->
        <div class="col-lg-8">
            @foreach (var item in Store.Cart)
            {
                <div class="card mb-3">
                    <div class="row g-3 align-items-center p-3">
                        <div class="col-auto">
                            <img src="@(!string.IsNullOrEmpty(item.Product.Image) ? item.Product.Image : "/placeholder.svg")"
                                 class="img-thumbnail" style="width:96px; height:96px; object-fit:cover;" />
                        </div>
                        <div class="col">
                            <h5 class="card-title mb-1">@item.Product.Name</h5>
                            <p class="text-muted mb-1">@item.Product.Category</p>
                            <p class="fw-bold mb-0">
                                @string.Format(new CultureInfo("vi-VN"), "{0:N0} đ", item.Product.Price)
                            </p>
                        </div>
                        <div class="col-auto d-flex flex-column align-items-end justify-content-between">
                            <button class="btn btn-link text-danger p-0 mb-2"
                                    @onclick="() => Store.RemoveFromCart(item.Product.Id)">
                                🗑️
                            </button>
                            <div class="d-flex align-items-center gap-2">
                                <button class="btn btn-outline-secondary btn-sm"
                                        @onclick="() => Store.UpdateCartQuantity(item.Product.Id, item.Quantity - 1)"
                                        disabled="@((item.Quantity) <= 1)">
                                    -
                                </button>
                                <input type="text" readonly value="@item.Quantity" class="form-control text-center p-1" style="width:50px;" />
                                <button class="btn btn-outline-secondary btn-sm"
                                        @onclick="() => Store.UpdateCartQuantity(item.Product.Id, item.Quantity + 1)"
                                        disabled="@((item.Quantity) >= 10)">
                                    +
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Order Summary -->
        <div class="col-lg-4">
            <div class="card sticky-top" style="top:20px;">
                <div class="card-body">
                    <h5 class="card-title mb-3">Order Summary</h5>
                    <div class="mb-3">
                        @foreach (var item in Store.Cart)
                        {
                            <div class="d-flex justify-content-between small mb-1">
                                <span>@item.Product.Name x @item.Quantity</span>
                                <span>@(item.Product.Price* item.Quantity).ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</span>
                            </div>
                        }
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between fw-bold mb-3">
                        <span>Total</span>
                        <span>@Store.CartTotal.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</span>
                    </div>
                    <button class="btn btn-primary w-100" @onclick='() => Navigation.NavigateTo("/checkout")'>
                        Proceed to Checkout
                    </button>
                </div>
            </div>
        </div>
    </div>
}
